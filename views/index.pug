extends layout

block content
  table(class='gridtable')
    tr
      th Id
      th UserName
      th Age
      th Email
      th UserLevel
      th 
    each item in people
      tr
        td
          a(href='/details/' + item.id) #{item.id}
        td #{item.userName}
        td #{item.age}
        td #{item.email}
        td #{item.userLevel}
          a(href='/edit/' + item.id) Edit
        td
          a(href='/delete/' + item.id) Delete

  p
  #menu
    a(href='/create') Add new person